apiVersion: config.openshift.io/v1
kind: OAuth
metadata:
  name: cluster
spec:
  identityProviders:
  - name: Azure
    mappingMethod: claim
    type: OpenID
    openID:
      claims:
        email:
        - email
        name:
        - name
        preferredUsername:
        - preferred_username
        - email
      clientID: ${AAD_CLIENT_ID}
      clientSecret:
        name: azure-aad-client-secret
      issuer: https://login.microsoftonline.com/${TENANT_ID}/v2.0
